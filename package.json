{
  "name": "pushwork",
  "version": "1.0.4",
  "description": "Bidirectional directory synchronization using Automerge CRDTs",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "pushwork": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bench": "tsx bench/runner.ts",
    "bench:watch": "tsx watch bench/runner.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepack": "pnpm run build",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "automerge",
    "sync",
    "crdt",
    "collaboration",
    "filesystem"
  ],
  "author": "Peter van Hardenberg",
  "license": "MIT",
  "dependencies": {
    "@automerge/automerge": "^3.2.0",
    "@automerge/automerge-repo": "^2.5.0-alpha.2",
    "@automerge/automerge-repo-network-websocket": "^2.5.0-alpha.2",
    "@automerge/automerge-repo-storage-indexeddb": "^2.5.0-alpha.2",
    "@automerge/automerge-repo-storage-nodefs": "^2.5.0-alpha.2",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "diff": "^8.0.2",
    "glob": "^10.3.0",
    "istextorbinary": "^9.5.0",
    "mime-types": "^2.1.35",
    "micromatch": "^4.0.8",
    "myers-diff": "^2.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/diff": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/micromatch": "^4.0.9",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.0.0",
    "@types/tmp": "^0.2.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "tinybench": "^2.9.0",
    "tmp": "^0.2.1",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*.(test|spec).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}